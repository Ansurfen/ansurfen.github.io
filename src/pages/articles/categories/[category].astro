---
import { getCategoryPaths } from "@/lib/articles";
import CategoryLayout from "@/layouts/category-layout.astro";

export async function getStaticPaths() {
  return getCategoryPaths("blog");
}

const { category } = Astro.params;

// Page properties
const title = category;
const description = `Exploring ${category} insights, lessons, and discoveries from my software engineering journey.`;
---

<CategoryLayout
  category={category}
  title={title}
  baseLink="/articles"
  articlesTitle="Articles"
  description={description}
  collectionName="blog"
/>
