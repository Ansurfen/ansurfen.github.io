---
import { getArticlePaths } from "@/lib/articles";
import ArticlesLayout from "@/layouts/articles-layout.astro";

export const getStaticPaths = await getArticlePaths("blog");

const { page } = Astro.props;
---

<ArticlesLayout
  collection="blog"
  title="Blog sharing"
  description="Share front-end, back-end, full-stack development and other articles from time to time"
  seriesTitle="Series"
  categoriesTitle="Categories"
  articlesTitle="Articles"
  basePath="/articles"
  page={page}
/>
