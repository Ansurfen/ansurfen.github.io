---
import { getSeriesPaths } from "@/lib/articles";
import SeriesLayout from "@/layouts/series-layout.astro";

export async function getStaticPaths() {
  return getSeriesPaths("blog");
}

const { series } = Astro.params;

// Page properties
const title = series;
const description = `Deep dive into ${series} a curated series from my software engineering journey.`;
---

<SeriesLayout
  series={series}
  title={title}
  baseLink="/articles"
  description={description}
  collectionName="blog"
  articlesTitle="Articles"
/>
