---
import { getCategoryPaths } from "@/lib/articles";
import CategoryLayout from "@/layouts/category-layout.astro";

export async function getStaticPaths() {
  return getCategoryPaths("esESBlog");
}

const { category } = Astro.params;

// Page properties
const title = category;
const description = `Explora la categoría ${category} de mi viaje en ingeniería de software.`;
---

<CategoryLayout
  category={category}
  title={title}
  baseLink="/es_es/articles"
  articlesTitle="Artículos"
  description={description}
  collectionName="esESBlog"
/>
