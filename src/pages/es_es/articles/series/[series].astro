---
import { getSeriesPaths } from "@/lib/articles";
import SeriesLayout from "@/layouts/series-layout.astro";

export async function getStaticPaths() {
  return getSeriesPaths("zhCNBlog");
}

const { series } = Astro.params;

// Page properties
const title = series;
const description = `Explora la serie ${series} de mi viaje en ingeniería de software.`;
---

<SeriesLayout
  series={series}
  title={title}
  baseLink="/zh_cn/articles"
  description={description}
  collectionName="zhCNBlog"
  articlesTitle="文章"
/>
