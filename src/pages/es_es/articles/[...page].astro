---
import { getArticlePaths } from "@/lib/articles";
import ArticlesLayout from "@/layouts/articles-layout.astro";

export const getStaticPaths = await getArticlePaths("esESBlog");

const { page } = Astro.props;
---

<ArticlesLayout
  collection="esESBlog"
  title="Blog compartido"
  description="Comparto artículos sobre desarrollo web, backend, full stack, etc."
