---
import { getArticlePaths } from "@/lib/articles";
import ArticlesLayout from "@/layouts/articles-layout.astro";

export const getStaticPaths = await getArticlePaths("ruBlog");

const { page } = Astro.props;
---

<ArticlesLayout
  collection="ruBlog"
  title="Блог"
  description="Нерегулярно делюсь статьями о веб-разработке"
