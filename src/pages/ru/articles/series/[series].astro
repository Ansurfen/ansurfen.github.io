---
import { getSeriesPaths } from "@/lib/articles";
import SeriesLayout from "@/layouts/series-layout.astro";

export async function getStaticPaths() {
  return getSeriesPaths("ruBlog");
}

const { series } = Astro.params;

// Page properties
const title = series;
const description = `Исследуйте мои статьи и идеи о ${series} и их практические применения.`;
---

<SeriesLayout
  series={series}
  title={title}
  baseLink="/ru/articles"
  description={description}
  collectionName="ruBlog"
  articlesTitle="Статьи"
/>
