---
import { getCategoryPaths } from "@/lib/articles";
import CategoryLayout from "@/layouts/category-layout.astro";

export async function getStaticPaths() {
  return getCategoryPaths("ruBlog");
}

const { category } = Astro.params;

// Page properties
const title = category;
const description = `Исследуйте мои статьи и идеи о ${category} и их практические применения.`;
---

<CategoryLayout
  category={category}
  title={title}
  baseLink="/ru/articles"
  articlesTitle="Статьи"
  description={description}
  collectionName="ruBlog"
/>
