---
import Layout from "@/layouts/layout.astro";
import { getLocale, getNavLinkes } from "@/lib/i18n";
import Navbar from "@/components/navbar/index.astro";
import Pattern from "@/components/ui/pattern.astro";
import Box from "@/components/box/index.astro";
import BoxHeader from "@/components/box/header.astro";
import { ArrowLeft } from "lucide-react";
import LinkBtn from "@/components/ui/link-btn.astro";
import BoxTitle from "@/components/box/title.astro";
import BoxContent from "@/components/box/content.astro";
import { blogMedia, gitMedia, socialNetworkMedia, videoMedia } from "@/constants/account";
const backLink = "/";

const locale = getLocale(Astro.url);
const navText = getNavLinkes(locale);
---

<Layout title="Social">
  <Navbar text={navText} />
  <main class="mx-auto min-h-screen max-w-3xl" aria-label="Main content">
    <Pattern className="h-14">
      {
        backLink && (
          <LinkBtn
            ariaLabel="Back link"
            className="absolute bottom-0 left-2 z-1"
            href={backLink}
          >
            <ArrowLeft />
          </LinkBtn>
        )
      }
    </Pattern>
    <Box>
      <BoxHeader>
        <BoxTitle className="text-2xl !font-black">Social Platforms</BoxTitle>
      </BoxHeader>
      <BoxContent>
        I'm active on various social platforms. You can find me on the following
        platforms:
      </BoxContent>
    </Box>

    <Pattern />
    <Box>
      <BoxHeader>
        <BoxTitle>Git</BoxTitle>
      </BoxHeader>

      <BoxContent>
        <div
          class="grid grid-cols-[repeat(auto-fill,minmax(120px,1fr))] gap-3"
          style="content-visibility: auto; contain-intrinsic-size: auto 48px;"
        >
          {
            Object.values(gitMedia).map(item => (
              <a
                href={item.href}
                target="_blank"
                rel="noopener noreferrer"
                class:list={[
                  "flex h-10 min-w-[120px] items-center justify-center gap-2 rounded-md border border-solid bg-blue-50/10 p-2",
                  "transition-all duration-200 hover:bg-blue-50/20",
                ]}
              >
                {item.icon && (
                  <span class="flex size-5 items-center justify-center">
                    <item.icon className="size-5" />
                  </span>
                )}
                <span class="truncate text-sm">{item.title}</span>
              </a>
            ))
          }
        </div>
      </BoxContent>
    </Box>

    <Pattern />
    <Box>
      <BoxHeader>
        <BoxTitle>Blog</BoxTitle>
      </BoxHeader>
      <BoxContent>
        <div
          class="grid grid-cols-[repeat(auto-fill,minmax(120px,1fr))] gap-3"
          style="content-visibility: auto; contain-intrinsic-size: auto 48px;"
        >
          {
            Object.values(blogMedia).map(item => (
              <a
                href={item.href}
                target="_blank"
                rel="noopener noreferrer"
                class:list={[
                  "flex h-10 min-w-[120px] items-center justify-center gap-2 rounded-md border border-solid bg-blue-50/10 p-2",
                  "transition-all duration-200 hover:bg-blue-50/20",
                ]}
              >
                {item.icon && (
                  <span class="flex size-5 items-center justify-center">
                    <item.icon className="size-5" />
                  </span>
                )}
                <span class="truncate text-sm">{item.title}</span>
              </a>
            ))
          }
        </div>
      </BoxContent>
      <Pattern />
      <BoxHeader>
        <BoxTitle>Social Networks</BoxTitle>
      </BoxHeader>
      <BoxContent>
        <div
          class="grid grid-cols-[repeat(auto-fill,minmax(120px,1fr))] gap-3"
          style="content-visibility: auto; contain-intrinsic-size: auto 48px;"
        >
          {
            Object.values(socialNetworkMedia).map(item => (
              <a
                href={item.href}
                target="_blank"
                rel="noopener noreferrer"
                class:list={[
                  "flex h-10 min-w-[120px] items-center justify-center gap-2 rounded-md border border-solid bg-blue-50/10 p-2",
                  "transition-all duration-200 hover:bg-blue-50/20",
                ]}
              >
                {item.icon && (
                  <span class="flex size-5 items-center justify-center">
                    <item.icon className="size-5" />
                  </span>
                )}
                <span class="truncate text-sm">{item.title}</span>
              </a>
            ))
          }
        </div>
      </BoxContent>
      <Pattern />

      <BoxHeader>
        <BoxTitle>Video</BoxTitle>
      </BoxHeader>
      <BoxContent>
        <div
          class="grid grid-cols-[repeat(auto-fill,minmax(120px,1fr))] gap-3"
          style="content-visibility: auto; contain-intrinsic-size: auto 48px;"
        >
          {
            Object.values(videoMedia).map(item => (
              <a
                href={item.href}
                target="_blank"
                rel="noopener noreferrer"
                class:list={[
                  "flex h-10 min-w-[120px] items-center justify-center gap-2 rounded-md border border-solid bg-blue-50/10 p-2",
                  "transition-all duration-200 hover:bg-blue-50/20",
                ]}
              >
                {item.icon && (
                  <span class="flex size-5 items-center justify-center">
                    <item.icon className="size-5" />
                  </span>
                )}
                <span class="truncate text-sm">{item.title}</span>
              </a>
            ))
          }
        </div>
      </BoxContent>
    </Box>
  </main>
</Layout>
