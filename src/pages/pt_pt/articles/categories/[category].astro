---
import { getCategoryPaths } from "@/lib/articles";
import CategoryLayout from "@/layouts/category-layout.astro";

export async function getStaticPaths() {
  return getCategoryPaths("ptPTBlog");
}

const { category } = Astro.params;

// Page properties
const title = category;
const description = `Explore as ideias, as lições e as descobertas relacionadas a ${category}, do meu percurso na engenharia de software.`;
---

<CategoryLayout
  category={category}
  title={title}
  baseLink="/pt_pt/articles"
  articlesTitle="Artigos"
  description={description}
  collectionName="ptPTBlog"
/>
