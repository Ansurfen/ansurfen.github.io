---
import { getCategoryPaths } from "@/lib/articles";
import CategoryLayout from "@/layouts/category-layout.astro";

export async function getStaticPaths() {
  return getCategoryPaths("jaJPBlog");
}

const { category } = Astro.params;

// Page properties
const title = category;
const description = `${category} に関する気づきや学びを探ります。`;
---

<CategoryLayout
  category={category}
  title={title}
  baseLink="/ja_jp/articles"
  articlesTitle="記事"
  description={description}
  collectionName="jaJPBlog"
/>
