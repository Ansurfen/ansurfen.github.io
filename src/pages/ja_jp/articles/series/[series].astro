---
import SeriesLayout from "@/layouts/series-layout.astro";
import { getSeriesPaths } from "@/lib/articles";

export async function getStaticPaths() {
  return getSeriesPaths("jaJPBlog");
}

const { series } = Astro.params;

// Page properties
const title = series;
const description = `「${series}」 シリーズを深掘りし、私のソフトウェアエンジニアリングの旅から選び抜かれた内容をお届けします。`;
---

<SeriesLayout
  series={series}
  title={title}
  baseLink="/ja_jp/articles"
  description={description}
  collectionName="jaJPBlog"
  articlesTitle="記事"
/>
