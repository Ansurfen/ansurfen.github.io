---
import { getSeriesPaths } from "@/lib/articles";
import SeriesLayout from "@/layouts/series-layout.astro";

export async function getStaticPaths() {
  return getSeriesPaths("frFRBlog");
}

const { series } = Astro.params;

// Page properties
const title = series;
const description = `Explore la série ${series} de mon parcours en ingénierie de logiciels.`;
---

<SeriesLayout
  series={series}
  title={title}
  baseLink="/fr_fr/articles"
  description={description}
  collectionName="frFRBlog"
  articlesTitle="Articles"
/>
