---
import { getCategoryPaths } from "@/lib/articles";
import CategoryLayout from "@/layouts/category-layout.astro";

export async function getStaticPaths() {
  return getCategoryPaths("frFRBlog");
}

const { category } = Astro.params;

// Page properties
const title = category;
const description = `Explore les idées, les leçons et les découvertes liées à ${category}, de mon parcours en ingénierie de logiciels.`;
---

<CategoryLayout
  category={category}
  title={title}
  baseLink="/fr_fr/articles"
  articlesTitle="Articles"
  description={description}
  collectionName="frFRBlog"
/>
