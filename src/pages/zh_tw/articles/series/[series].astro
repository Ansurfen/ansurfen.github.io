---
import { getSeriesPaths } from "@/lib/articles";
import SeriesLayout from "@/layouts/series-layout.astro";

export async function getStaticPaths() {
  return getSeriesPaths("zhTWBlog");
}

const { series } = Astro.params;

// Page properties
const title = series;
const description = `深入探讨 ${series} 系列，从我的软件工程之旅中精选。`;
---

<SeriesLayout
  series={series}
  title={title}
  baseLink="/zh_tw/articles"
  description={description}
  collectionName="zhTWBlog"
  articlesTitle="文章"
/>
