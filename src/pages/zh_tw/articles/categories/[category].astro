---
import { getCategoryPaths } from "@/lib/articles";
import CategoryLayout from "@/layouts/category-layout.astro";

export async function getStaticPaths() {
  return getCategoryPaths("zhTWBlog");
}

const { category } = Astro.params;

// Page properties
const title = category;
const description = `探索 ${category} 的见解、教训和发现，从我的软件工程之旅中。`;
---

<CategoryLayout
  category={category}
  title={title}
  baseLink="/zh_tw/articles"
  articlesTitle="文章"
  description={description}
  collectionName="zhTWBlog"
/>
