---
import { getSeriesPaths } from "@/lib/articles";
import SeriesLayout from "@/layouts/series-layout.astro";

export async function getStaticPaths() {
  return getSeriesPaths("arSABlog");
}

const { series } = Astro.params;

// Page properties
const title = series;
const description = `تحديثات عن ${series} في رحلتي البرمجية`;
---

<SeriesLayout
  series={series}
  title={title}
  baseLink="/ar_sa/articles"
  description={description}
  collectionName="arSABlog"
  articlesTitle="المقالات"
/>
