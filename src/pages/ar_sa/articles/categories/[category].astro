---
import { getCategoryPaths } from "@/lib/articles";
import CategoryLayout from "@/layouts/category-layout.astro";

export async function getStaticPaths() {
  return getCategoryPaths("arSABlog");
}

const { category } = Astro.params;

// Page properties
const title = category;
const description = `استكشف آراء ودروس واكتشافاتي عن ${category} في رحلتي البرمجية`;
---

<CategoryLayout
  category={category}
  title={title}
  baseLink="/ar_sa/articles"
  articlesTitle="المقالات"
  description={description}
  collectionName="arSABlog"
/>
