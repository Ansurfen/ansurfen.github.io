---
import Layout from "@/layouts/layout.astro";
import Navbar from "@/components/navbar/index.astro";
import Footer from "@/components/footer.astro";
import Pattern from "@/components/ui/pattern.astro";
import Profile from "@/components/profile.astro";
import About from "@/components/sections/about.astro";
import TechStack from "@/components/tech-stack.astro";
import Experience from "@/components/sections/experience/experience.astro";
import Statistic from "@/components/statistic.astro";
import { navLinkes } from "@/lib/i18n";
import type { Locale } from "@/lib/i18n";

interface Props {
  locale: Locale;
  title: string;
  aboutTitle: string;
  techStackTitle: string;
  statisticTitle: string;
}

const { locale, title, aboutTitle, techStackTitle, statisticTitle } =
  Astro.props;

const { profile, profileTexts, experiences, experienceTexts } = await import(
  "@/constants"
);
---

<Layout title={title}>
  <Navbar text={navLinkes[locale]} />

  <main
    aria-label="Main content"
    class="mx-auto min-h-[calc(100vh-120px)] max-w-3xl"
  >
    <Pattern className="h-14" />
    <Profile info={profile[locale]} text={profileTexts[locale]} />
    <Pattern />
    <About title={aboutTitle} about={profile[locale].about} />
    <Pattern />
    <TechStack title={techStackTitle} />
    <Pattern />
    <Experience
      text={experienceTexts[locale]}
      experiences={experiences[locale]}
    />
    <Pattern />
    <Statistic title={statisticTitle} />
    <Pattern />
  </main>

  <Footer />
</Layout>

